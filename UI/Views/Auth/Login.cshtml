<div style={{marginTop: "30px" }} className="row justify-content-center pt-5">
    <div className="col-sm-6">
        <div className="card p-4">
            <form asp-controller="auth" asp-action="Login" method="post">
                <h1 className="text-center mb-3">Login </h1>
                <div className="form-group">
                    <label>Username:</label>
                    <input className="form-control" placeholder="Enter username" asp-for="Username" />
                </div>
                <div className="form-group mt-3">
                    <label>Password:</label>
                    <input className="form-control" type="password" placeholder="Enter password" asp-for="Password" />
                </div>
                <button type="submit"  className="btn btn-primary mt-4">Login</button>
                <br />
                <label> Need an Account?</label>
                @* <button type="submit"  *@
                @* </button> *@
            </form>

        </div>
    </div>

</div>